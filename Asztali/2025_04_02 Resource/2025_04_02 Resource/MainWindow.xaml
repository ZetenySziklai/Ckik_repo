<Window x:Class="_2025_04_02_Resource.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2025_04_02_Resource"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <SolidColorBrush x:Key="ButtonColor" Color="red" />
        </Grid.Resources>
        <Button Background="LightGreen" Content="Button" HorizontalAlignment="Left" Margin="27,29,0,0" VerticalAlignment="Top" Click="Button_Click_2"/>
        <Button Background="{StaticResource ButtonColor}" Content="Button" HorizontalAlignment="Left" Margin="91,29,0,0" VerticalAlignment="Top"/>
        <Button Background="{StaticResource ButtonColorApp}" Content="Button" HorizontalAlignment="Left" Margin="27,64,0,0" VerticalAlignment="Top"/>
        <Button Background="{DynamicResource ButtonColorDict}" Content="Button" HorizontalAlignment="Left" Margin="91,64,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
